    "declaration": true,
    "sourceMap": true,
    "outDir": "compiled",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "skipDefaultLibCheck": false
  },
  "include": [
    "src/*"
  ]
}